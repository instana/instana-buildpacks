{
    "name": "gcr-demo-instana-java-gradle",
    "env": {
        "INSTANA_ENDPOINT_URL": {
            "required": true
        },
        "INSTANA_AGENT_KEY": {
            "required": true
        },
        "_JAVA_OPTIONS": {
            "value": "-Xmx264M"
        }
    },
    "options": {
        "allow-unauthenticated": true,
        "memory": "768Mi",
        "cpu": "1",
        "port": 80
    },
    "build": {
        "skip": false,
        "buildpacks": {
            "builder": "gcr.io/buildpacks/builder"
        }
    },
    "hooks": {
        "prebuild": {
            "commands": [
                "echo ${INSTANA_AGENT_KEY} | docker login containers.instana.io -u '_' --password-stdin"
            ]
        }
    }
}